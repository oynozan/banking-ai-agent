{
    "scripts": {
        "start": "tsc && node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only --project tsconfig.json server.ts",
        "build": "tsc",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"**/(*.json|*.ts|*.js)\"",
        "pm2": "pm2 start dist/server.js --name server --watch"
    },
    "dependencies": {
        "bcryptjs": "^3.0.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.19.4",
        "groq-sdk": "^0.35.0",
        "socket.io": "^4.8.1",
        "ts-node-dev": "^2.0.0",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie": "^0.6.0",
        "@types/cookie-parser": "^1.4.10",
        "@types/express": "^5.0.5",
        "@types/jsonwebtoken": "^9.0.10",
        "prettier": "^3.6.2"
    }
}
